<h1>Listing movies</h1>

<table  class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.notes %></td>
      <td><%= link_to 'Show', movie_path(movie), class: 'btn btn-info btn-sm' %></td>
      <td><%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-primary btn-sm' %></td>
      <td><%= link_to 'Delete', movie_path(movie), method: :delete,
        data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New movie', new_movie_path, class: 'btn btn-success' %>
